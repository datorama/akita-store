{
  "compilerOptions": {                  
    "target": "es5",                        
    "module": "commonjs",                     
    "lib": ["dom", "es2016"],
    "declaration": true,
    "outDir": "./dist",      
    "noImplicitAny": false,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "strict": true,                
    "noEmitOnError": true,
    "noUnusedParameters": false, 
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "__tests__",
    "dist",
    "node_modules"
  ]
}